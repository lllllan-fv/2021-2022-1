<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QueryContactActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择查询方法: "/>

    <RadioGroup
        android:id="@+id/query_contact_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/query_contact_radio_button_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按姓名"/>

        <RadioButton
            android:id="@+id/query_contact_radio_button_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按手机号码"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入关键字: "/>

        <EditText
            android:id="@+id/query_contact_edit_view_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/query_contact_button_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询"/>

</LinearLayout>